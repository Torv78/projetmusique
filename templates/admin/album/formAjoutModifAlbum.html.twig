{% extends 'base.html.twig' %}

{% block title %}Ajout/modif Album{% endblock %}

{% block body %}

<h1 class="pt-2 text-center">
{% if (app.request.attributes.get('_route')=="app_admin_album_ajout") %}
    ajout
    {% else %}
    modification
{% endif %}
 d'un album</h1> <!-- Correction de la balise -->


{{form_start(formAlbum)}}

<div class="row">
    <div class="col">{{form_row(formAlbum.nom)}}</div>
    <div class="col-5">{{form_row(formAlbum.image)}}</div>
</div>
<div class="row">
    <div class="col">{{form_row(formAlbum.date)}}</div>
    <div class="col">{{form_row(formAlbum.artiste)}}</div>
    <div class="col">{{form_row(formAlbum.styles)}}</div>
</div>


<input type="submit" , class="btn btn-outline-success" value=
{% if (app.request.attributes.get('_route')=="app_admin_album_ajout") %}
    valider
    {% else %}
    modifier
{% endif %}>
<a href="{{path("app_admin_album")}}" class="btn btn-outline-warning">annuler</a>
{{ form_end(formAlbum)}}
{% endblock %}
